<%
  boardClassName ="
    bg-gradient-to-r from-violet-500 to-indigo-500 p-8
    rounded aspect-square justify-center items-center
    grid gap-6 grid-cols-#{@size} grid-rows-#{@size}
  "
  tileClassName = "
    p-1 shadow-sm hover:shadow-2xl rounded bg-black
    justify-self-center min-h-full min-w-full
  "
%>

<%= content_tag(:div, data: { controller: "board", board_value: @decoded_object }) do %>
  <%= content_tag(:div, class: boardClassName) do %>
    <% @board_size.times do |value| %>
      <%= content_tag(:div, value, class: tileClassName, data: {
          tile_index_value: value,
          action: "click->board#flipTile"
        }
      ) %>
    <% end %>
  <% end %>
<% end %>
