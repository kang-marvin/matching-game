<%
  sectionClassName = "grid grid-rows-1 grid-cols-4 overflow-visible text-center"
%>

<%= content_tag(:section, class: sectionClassName, data: {
                        controller: 'filter',
                        default_board_level_value: @default_level
                      }
) do %>

  <!-- Game Level -->
  <%= select_tag 'game_difficult_level',
        options_for_select(@available_levels, @selected_level),
        class: 'capitalize',
        multiple: false,
        data: {
          filter_target: 'boardLevel',
          action: 'change->filter#setBoardLevel'
        }
  %>


  <!-- Game Duration -->
  <div id="timer--elements" data-controller="timer">
    <div data-timer-target="display">00:00</div>
  </div>

  <!-- Game Moves -->
  <div id="moves--elements" data-controller="moves">
    <div data-moves-target="display">0 moves</div>
  </div>

  <!-- Reset Board -->
  <%= button_tag(type: 'button', data: { action: 'click->filter#refresh' }) do %>
    <i class="fas fa-redo"></i>
  <% end %>

<% end%>

<!-- Alert Panel -->
<div id="alert--elements" data-controller="alert">
  <span data-alert-target="success" class="align-middle text-center"></span>
</div>
