<section
  class="grid grid-rows-1 grid-cols-4 overflow-visible text-center"
  data-controller="settings",
  data-settings-default-level-value="<%= @default_level %>"
>
  <!-- Level  Selection -->
  <%= select_tag  'game_difficult_level',
                  options_for_select(@available_levels, @selected_level),
                  class: 'capitalize',
                  id: '',
                  multiple: false,
                  data: {
                    settings_target: 'difficultyLevel',
                    action: 'change->settings#setDifficultyLevel'
                  }
                  %>

  <!-- Game Duration -->
  <div id="timer--elements" data-controller="timer">
    <div data-timer-target="display">00:00</div>
  </div>

  <!-- Game Moves -->
  <div id="moves--elements" data-controller="moves">
    <div data-moves-target="display">0 moves</div>
  </div>

  <!-- Reset Board -->
  <%= button_tag(type: 'button', data: { action: 'click->settings#resetBoard' }) do %>
    <i class="fas fa-redo"></i>
  <% end %>
</section>
